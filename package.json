{
  "name": "couchdb-adapter",
  "version": "0.0.1",
  "description": "CouchDB adapter for Casbin",
  "main": "index.js",
  "type": "module",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test-c": "jest --coverage",
    "lint": "eslint --ext .js, .ts src/ test/",
    "prepack": "npm run lint && npm run build",
    "release": "npx -p semantic-release -p @semantic-release/git -p @semantic-release/changelog semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/node-casbin/couchdb-adapter.git"
  },
  "author": "Node-Casbin",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/node-casbin/couchdb-adapter/issues"
  },
  "homepage": "https://github.com/node-casbin/couchdb-adapter#readme",
  "dependencies": {
    "nano": "^10.1.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "babel-jest": "^29.5.0",
    "casbin": "^5.24.1",
    "coveralls": "^3.1.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5"
  },
  "peerDependencies": {
    "casbin": "^5.24.1"
  },
  "files": [
    "index.js",
    "examples"
  ],
  "keywords": [
    "casbin",
    "node-casbin",
    "adapter",
    "couchdb",
    "access-control",
    "authorization",
    "auth",
    "authz",
    "acl",
    "rbac",
    "abac"
  ],
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*.+(js|ts)"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ]
  }
}
